<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="app.mrquan.datastorage.activity.AddActivity">

    <EditText
        android:id="@+id/editText_id"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/editText_name"
        android:layout_alignLeft="@+id/editText_name"
        android:layout_alignStart="@+id/editText_name"
        android:hint="id" />

    <EditText
        android:id="@+id/editText_name"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/editText_price"
        android:layout_alignLeft="@+id/editText_price"
        android:layout_alignStart="@+id/editText_price"
        android:hint="name" />

    <EditText
        android:id="@+id/editText_price"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:hint="价格" />

    <Button
        android:id="@+id/add_book"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editText_price"
        android:layout_alignStart="@+id/editText_price"
        android:layout_below="@+id/editText_price"
        android:text="提交" />
</RelativeLayout>
